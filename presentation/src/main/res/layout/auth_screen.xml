<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#000000">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вход в личный кабинет"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="32dp" />

        <!-- Блок для поиска работы -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1D1D1D"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#292929"
            android:layout_gravity="center"
            android:elevation="4dp"
            android:backgroundTintMode="src_over"
            android:layout_margin="8dp"
            android:clipToPadding="false"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Поиск работы"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Введите данные"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_continue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Продолжить"
                    android:backgroundTint="#1E88E5"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/button_login_with_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Войти с паролем"
                    android:backgroundTint="#2196F3"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Блок для поиска сотрудников -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1D1D1D"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:elevation="4dp"
            android:backgroundTint="#292929"
            android:layout_margin="8dp"
            android:clipToPadding="false"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Поиск сотрудников"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Размещение вакансий и доступ к базе резюме"
                android:textSize="14sp"
                android:textColor="#B0B0B0"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/button_find_employees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Я ищу сотрудников"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>